---
interface Props {
  title: string;
  description: string;
  thumbnail: string;
  slug: string;
  category: string;
  client?: string;
}

const { title, description, thumbnail, slug, category, client } = Astro.props;
---

<a href={`/work/${slug}/`} class="project-card">
  <div class="project-card__image">
    <img src={thumbnail} alt={title} loading="lazy" />
  </div>
  <div class="project-card__info">
    <span class="project-card__category">{category}</span>
    <h3 class="project-card__title">{title}</h3>
    {client && <p class="project-card__client">{client}</p>}
    <p class="project-card__description">{description}</p>
  </div>
</a>
