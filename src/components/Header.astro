---
const currentPath = Astro.url.pathname;

const navLinks = [
  { href: '/work/', label: 'Work' },
  { href: '/blog/', label: 'Journal' },
  { href: '/about/', label: 'About' },
  { href: '/contact/', label: 'Contact' },
];
---

<header class="site-header">
  <div class="container">
    <div class="site-name">
      <a href="/">Don Krumpos</a>
    </div>
    <nav>
      <ul class="site-nav">
        {navLinks.map(link => (
          <li>
            <a
              href={link.href}
              class:list={[{ active: currentPath.startsWith(link.href) }]}
            >
              {link.label}
            </a>
          </li>
        ))}
      </ul>
    </nav>
  </div>
</header>
